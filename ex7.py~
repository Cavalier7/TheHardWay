# print a phrase
print "Mary had a little lamb."

# print a phrase and adds the following string through string formatting
print "Its fleece was white as %s." % 'snow'

# prints the phrase
print "And everywhere that Mary went."

# print 10 periods that are joined as one string
print "." * 10  # what's that do?

# Each of the 12 variables is assigned a single letter as a string
end1 = "C"
end2 = "h"
end3 = "e"
end4 = "e"
end5 = "s"
end6 = "e"
end7 = "B"
end8 = "u"
end9 = "r"
end10 = "g"
end11 = "e"
end12 = "r"

